data: {"event_data":"{\"message\":{\"content_type\":2008,\"content\":\"{\\\"text\\\":\\\"、死亡率和住院率以及社会、经济的平稳运行\\\"}\"},\"message_id\":\"1883906962664706\",\"local_message_id\":\"f672c620-0086-11f0-811d-eb3cb396d61c\",\"conversation_id\":\"1883902401820162\",\"local_conversation_id\":\"local_2402857233354110\",\"section_id\":\"1883902401820418\",\"reply_id\":\"1883906962663426\",\"is_delta\":true,\"status\":4,\"input_content_type\":2001,\"message_index\":2,\"bot_id\":\"7338286299411103781\"}","event_id":"96","event_type":2001}

